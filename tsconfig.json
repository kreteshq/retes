{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "lib": [
      "es2020"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {},
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "declaration": true
  },
  "clean-publish": {
    "files": ["dist/**/*.spec.js"],
  },
  "include": [
    "src/**/*.ts"
  ]
}
